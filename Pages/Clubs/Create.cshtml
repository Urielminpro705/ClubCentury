@page
@model ClubCentury.Pages.Clubs.CreateModel

@{
    ViewData["Title"] = "Crear-Club";
}

<h1>Crear</h1>

<h4>Club</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Club.Direccion" class="control-label"></label>
                <input asp-for="Club.Direccion" class="form-control" />
                <span asp-validation-for="Club.Direccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Club.Cp" class="control-label"></label>
                <input asp-for="Club.Cp" class="form-control" />
                <span asp-validation-for="Club.Cp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Club.Telefono" class="control-label"></label>
                <input asp-for="Club.Telefono" class="form-control" />
                <span asp-validation-for="Club.Telefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Club.Correo" class="control-label"></label>
                <input asp-for="Club.Correo" class="form-control" />
                <span asp-validation-for="Club.Correo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
