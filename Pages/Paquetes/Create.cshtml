@page
@model ClubCentury.Pages.Paquetes.CreateModel

@{
    ViewData["Title"] = "Crear-Paquete";
}

<h1>Crear</h1>

<h4>Paquete</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Paquete.Nombre" class="control-label"></label>
                <input asp-for="Paquete.Nombre" class="form-control" />
                <span asp-validation-for="Paquete.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Paquete.Costo" class="control-label"></label>
                <input asp-for="Paquete.Costo" class="form-control" />
                <span asp-validation-for="Paquete.Costo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Paquete.Duracion" class="control-label"></label>
                <input asp-for="Paquete.Duracion" class="form-control" />
                <span asp-validation-for="Paquete.Duracion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Paquete.Privilegios" class="control-label"></label>
                <input asp-for="Paquete.Privilegios" class="form-control" />
                <span asp-validation-for="Paquete.Privilegios" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
